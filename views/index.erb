<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hirumeshi-Gacha</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <h1><%= @title %></h1>
      <form action="gacha" method="post">
        <div class="mb-3">
          <% CHOICES.each do |id, text| %>
            <div class="form-check">
              <input type="checkbox" name="<%= id %>" value="1" class="form-check-input" id="vote_<%= id %>" />
              <label class="form-check-label" for="vote_<%= id %>">
                <%= text %>
              </label>
            </div>
          <% end %>
        </div>
        <button type="submit" class="btn btn-primary">Gacha!</button>
      </form>
    </div>

  </body>
</html>
